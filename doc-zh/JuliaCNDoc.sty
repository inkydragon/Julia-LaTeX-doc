%% itemize / 无序列表
\usepackage{enumitem}
\setitemize{
    % 对齐段首缩进
    leftmargin=\dimexpr \parindent + 0.5\labelwidth + \labelsep - \itemindent \relax,
    % 消除各 item 之间的间距
    itemsep=0pt,
    partopsep=0pt,
    parsep=\parskip,
    topsep=5pt
}
